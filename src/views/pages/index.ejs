<section class="kontakt" id="kontakt">
  <form action="" class="kontakt__form" autocomplete="off">
    <h3 class="section__title">Kontakt</h3>
    <div class="kontakt__form__group form__group">
      <input
        class="kontakt__form__input form__input"
        type="text"
        name="namn"
        placeholder=""
        required="True"
      />
      <label class="form__label" for="namn">Namn</label>
    </div>
    <div class="kontakt__form__group form__group">
      <input
        class="kontakt__form__input form__input"
        type="text"
        name="email"
        placeholder=""
        required="True"
      />
      <label class="form__label" for="email">Email</label>
    </div>
    <div class="kontakt__form__group form__group">
      <input
        class="kontakt__form__input form__input"
        type="text"
        name="amne"
        placeholder=""
        required="True"
      />
      <label class="form__label" for="amne">Ämne</label>
    </div>
    <div class="kontakt__form__group form__group">
      <textarea
        class="kontakt__form__input form__input no__resize"
        name="meddelande"
        cols="30"
        rows="10"
        placeholder=""
        required="True"
      ></textarea>
      <label class="form__label" for="meddelande">Meddelande</label>
    </div>
    <div class="kontakt__form__group form__group">
      <input
        onclick="SendEmail()"
        class="form__input"
        type="button"
        value="Skicka"
      />
    </div>
  </form>
</section>

<script>
  function SendEmail() {
    var namn = document.getElementsByName('namn')[0].value;
    var email = document.getElementsByName('email')[0].value;
    var ämne = document.getElementsByName('amne')[0].value;
    var meddelande = document.getElementsByName('meddelande')[0].value;
    meddelande = meddelande.replace(/\r\n|\r|\n/g, '%0D%0A');

    if (namn == '') {
      alert('Fyll i ditt namn');
      return;
    }
    if (email == '') {
      alert('Fyll i din email');
      return;
    }
    if (ämne == '') {
      alert('Fyll i ett ämne');
      return;
    }
    if (meddelande == '') {
      alert('Skriv ett meddelande');
      return;
    }

    window.open(
      'mailto:dennis@holmstrom.nu?cc=' +
        email +
        '&subject=' +
        ämne +
        '&body=' +
        meddelande
    );
  }
</script>
